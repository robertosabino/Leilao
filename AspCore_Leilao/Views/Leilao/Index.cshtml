        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAbertura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFinalizacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeilaoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeilaoID">Details</a> |
